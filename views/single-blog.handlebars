{{> blog-info blog}}

{{#if loggedIn}}
<div class="card">
    
    <form class="card-body comment-form" id="comment-form" data-blog={{blog_id}} >

        <label class="form-label">Comment</label>
        <input type="text" value="{{blog.blog_header}}" placeholder="Enter Comment" id="comment" name="comment-body" class="form-input" />

        
        <button type="submit" class="btn">Submit</button>
    </form>
</div>
{{/if}}

{{> comments blog.comments}}

